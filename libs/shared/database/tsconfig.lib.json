{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.lib.tsbuildinfo",
    "emitDeclarationOnly": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@kafaat-systems/tenant-context": ["../tenant-context/src/index.ts"],
      "@kafaat-systems/entities": ["../entities/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "src/lib/config/typeorm.cli.config.ts"
  ],
  "references": [{
    "path": "../tenant-context"
  }, { "path": "../entities" },]
}
