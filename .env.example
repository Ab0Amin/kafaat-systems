# Database Configuration
# PostgreSQL connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hr_core

# Schema configuration
DB_SCHEMA=public                # Default schema for queries
DEFAULT_SCHEMA=public           # Fallback schema when tenant context is not available
DEFAULT_TENANT=public           # Default tenant for development (set to a valid tenant name)

# Application Configuration
PORT=3000                       # Server port
NODE_ENV=development            # Environment (development, production, test)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200  # CORS allowed origins

# JWT Configuration
JWT_SECRET=your-secret-key      # Secret key for JWT tokens
JWT_EXPIRES_IN=1d               # JWT token expiration time

# Logging Configuration
LOG_LEVEL=debug                 # Log level (debug, info, warn, error)
LOG_TO_FILE=false               # Whether to log to a file

# Multi-tenancy Configuration
ENABLE_TENANT_ISOLATION=true    # Whether to enforce tenant isolation
ENABLE_TENANT_MIDDLEWARE=true   # Whether to enable tenant middleware