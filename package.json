{
  "name": "@kafaat-systems/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start:frontend": "nx dev hr-core-client",
    "start:backend": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only --project apps/hr-core-server/tsconfig.json -r tsconfig-paths/register apps/hr-core-server/src/main.ts",
    "build:frontend": "nx build hr-core-client",
    "build:backend": "nx build hr-core-server",
    "page": "node scripts/generate-page.js",
    "component": "node scripts/generate-component.js",
    "g:resource": "node scripts/generate-nest-resource.js",
    "format": "nx format:write",
    "format:check": "nx format:check",
    "lint": "nx run-many --target=lint --all",
    "check:all": "npm run format:check && npm run lint",
    "docker:build:server": "docker buildx build -t ahmedabdalla95/hr-core-server -f ./apps/hr-core-server/Dockerfile .",
    "docker:build:client": "docker buildx build -t ahmedabdalla95/hr-core-client -f ./apps/hr-core-client/Dockerfile .",
    "dev:docker": "rimraf apps/hr-core-client/.next apps/hr-core-server/dist && docker-compose up --build",
    "stop:docker": "docker-compose down",
    "typeorm": "cross-env TS_NODE_PROJECT=tsconfig.typeorm.json typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate libs/shared/db/src/lib/migrations/Migration -d libs/shared/db/src/lib/config/typeorm.cli.config.ts",
    "migration:run": "npm run typeorm -- migration:run -d libs/shared/db/src/lib/config/typeorm.cli.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d libs/shared/db/src/lib/config/typeorm.cli.config.ts",
    "db:init": "npm run typeorm -- migration:run -d libs/shared/db/src/lib/config/typeorm.cli.config.ts",
    "db:owner": "psql -U postgres -d hr-core  -f libs/shared/db/src/sql/owner.sql"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "@types/helmet": "^4.0.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^8.1.0",
    "next": "~15.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.0",
    "tldts": "^7.0.4",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/testing": "^10.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@nrwl/nest": "^19.8.4",
    "@nx/cypress": "20.8.0",
    "@nx/eslint": "20.8.0",
    "@nx/eslint-plugin": "20.8.0",
    "@nx/jest": "20.8.0",
    "@nx/js": "20.8.0",
    "@nx/nest": "^20.8.0",
    "@nx/next": "20.8.0",
    "@nx/node": "20.8.0",
    "@nx/web": "20.8.0",
    "@nx/webpack": "20.8.0",
    "@nx/workspace": "20.8.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/jest": "^29.5.12",
    "@types/node": "18.16.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "cypress": "^14.2.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.8.0",
    "eslint-config-next": "^15.2.4",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-cypress": "^3.5.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "20.8.0",
    "pg": "^8.14.1",
    "prettier": "^2.6.2",
    "rimraf": "^6.0.1",
    "sass": "1.62.1",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typeorm": "^0.3.22",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "apps/*",
    "libs/shared/*"
  ]
}
