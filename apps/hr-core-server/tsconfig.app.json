{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "rootDir": "src",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "module": "esnext",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "../../libs/tenant/tenant.module.ts",
    "../../libs/tenant/tenant.service.ts",
    "../../libs/tenant/tenant.service.spec.ts"
  ],
  "exclude": [
    "out-tsc",
    "dist",
    "jest.config.js",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "references": [
    {
      "path": "../../libs/tenant/tsconfig.lib.json"
    },
    {
      "path": "../../libs/shared/tsconfig.lib.json"
    }
  ]
}
