{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "customConditions": ["development"],
    "paths": {
      "@kafaat-systems/database": ["libs/shared/db/src/index.ts"],
      "@kafaat-systems/entities": ["libs/shared/entities/src/index.ts"],
      "@kafaat-systems/schemaConfig": ["libs/shared/schemaConfig/src/index.ts"],
      "@kafaat-systems/tenant-context": ["libs/shared/tenant-context/src/index.ts"]
    }
  }
}
